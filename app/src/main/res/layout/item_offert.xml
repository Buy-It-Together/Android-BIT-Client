<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_offer_id" android:padding="5dp">

	<TextView
			android:text="@string/http_example_com_item_select"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/offert_link" android:textSize="26sp"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:text="@string/expiried_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:textSize="16sp" android:layout_marginStart="5dp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/offer_expiried_date" android:layout_weight="1"
				android:textSize="16sp"/>
	</LinearLayout>
</LinearLayout>